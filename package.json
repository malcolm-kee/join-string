{
  "name": "join-string",
  "version": "0.0.3",
  "description": "A utility for joining strings",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "jest",
    "test:ci": "jest --coverage --coverageReporters=text-lcov | coveralls",
    "prebuild": "rimraf dist",
    "build": "tsc --p tsconfig.json"
  },
  "keywords": [
    "string utility",
    "className",
    "separator"
  ],
  "author": "Malcolm Kee <malcolm.keeweesiong@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "typesafe-is": "^1.0.1"
  },
  "devDependencies": {
    "@types/jest": "^23.3.9",
    "coveralls": "^3.0.2",
    "jest": "^23.6.0",
    "prettier": "^1.15.2",
    "rimraf": "^2.6.2",
    "ts-jest": "^23.10.5",
    "typescript": "^3.1.6"
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 90
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "test/.*.(tsx?|jsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "collectCoverageFrom": [
      "src/**/*.tsx",
      "src/**/*.ts"
    ]
  }
}
